<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".BookDataUpdate.DataUpdateFragment">

    <TextView
        android:id="@+id/pagePleaseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_page_text" />

    <EditText
        android:id="@+id/pageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/thoughtPleaseText"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="@string/help_thought_text" />

    <EditText
        android:id="@+id/thoughtInput"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_thoughtdata_text" />
</LinearLayout>
